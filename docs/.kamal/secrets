# Secrets for Kamal deployment
# These can be set via environment variables or a secrets manager

# GitHub Container Registry token
KAMAL_REGISTRY_PASSWORD=$GITHUB_TOKEN

# Rails master key for credentials decryption
RAILS_MASTER_KEY=$(cat config/master.key 2>/dev/null || echo "")

# Database URL (for production)
DATABASE_URL=sqlite3:///rails/data/production.sqlite3

