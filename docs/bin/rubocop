#!/usr/bin/env ruby
# frozen_string_literal: true

# Run RuboCop with --ignore-parent-exclusion to prevent the parent
# config's AllCops/Exclude from affecting the docs folder

ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../Gemfile", __dir__)

require "bundler/setup"

exec("rubocop", "--ignore-parent-exclusion", *ARGV)
