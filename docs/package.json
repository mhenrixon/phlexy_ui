{
  "devDependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.20",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "daisyui": "^5.5.14",
    "playwright": "1.57.0",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18"
  },
  "packageManager": "bun@1.3.2",
  "scripts": {
    "build:css": "bunx tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "watch:css": "bunx tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --watch",
    "lint:css": "stylelint './app/assets/stylesheets/**/*.css'",
    "lint:js": "bunx --bun @biomejs/biome lint app/javascript",
    "lint:js:fix": "bunx --bun @biomejs/biome check --write app/javascript",
    "lint:js:fixall": "bunx --bun @biomejs/biome check --write --unsafe app/javascript"
  },
  "dependencies": {
    "@biomejs/biome": "^2.3.10",
    "caniuse-lite": "^1.0.30001762",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1"
  }
}
